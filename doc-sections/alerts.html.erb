<section class="row">
  <header class="twentyfour columns">
    <h2>Alerts</h2>
  </header>
  <div class="row">
    <div class="eight columns">
      <h6 class="compact">Examples</h6>
      <%= sample_code "sample-code/_alerts.html.erb", "markup" %>
      <%= sample_code "sample-code/_alerts_styled.html.erb", "markup" %>
      <h6 class="compact">Semantic Classes</h6>
      <p>You can add classes to apply different styles to alerts.</p>
      <p><code>error</code> <code>success</code> <code>notice</code> <code>info</code></p>
    </div>
    <div class="fifteen columns pre-one">
      <div class="alert">
        <a class="close"></a>
        <p>Test</p>
      </div>
      <div class="alert primary">
        <a class="close"></a>
        <p>Test</p>
      </div>
      <div class="alert secondary">
        <a class="close"></a>
        <p>Test</p>
      </div>
      <div class="alert success">
        <a class="close"></a>
        <p>Test</p>
      </div>
      <div class="alert danger">
        <a class="close"></a>
        <p>Test</p>
      </div>
    </div>
  </div>
</section>